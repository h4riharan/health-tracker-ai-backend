{
  "compilerOptions": {
    "target": "ES6",
  "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
  "esModuleInterop": true,
  "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}